<% if logged_in? %>
<p>ログイン完了ユーザー：<%= current_user.name %></p>
    <h1>タスク一覧</h1>
    <ul>
        <% @tasks.each do |task| %>
        <li>
            <%= link_to task.id,task %>
            <%= task.status %>
            &gt;
            <%= task.content %>
        </li>
        <% end %>
    </ul>

    <%= paginate @tasks %>
    <div>
    <%= link_to '新規タスクの追加', new_task_path %>
    </div>
    
    <div>
        <%= link_to 'ログアウト', logout_path, method: :delete %>
    </div>
<% end %>